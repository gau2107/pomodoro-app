{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoro",
  "version": "0.1.0",
  "identifier": "com.pomodorotimer.app",
  "build": {
  "frontendDist": "../dist",
  "devUrl": "http://localhost:5173",
  "beforeDevCommand": "npm run dev",
  "beforeBuildCommand": "npm run build"
},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pomodoro",
        "width": 450,
        "height": 650,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "focus": true,
        "skipTaskbar": false
      },
      {
        "label": "space-explorer",
        "title": "Space Explorer",
        "url": "space-explorer.html",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true,
        "visible": false,
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
